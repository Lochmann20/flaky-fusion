 <a href={`/moebler/${data.slug}`}>
  <div class="card">
    <section class="gridItem">
      <img class="cardImg" src={`/images/${data.image2}`} alt={data.slug} />
      <h2>{data.name}</h2>
    </section>
  </div>
</a>

