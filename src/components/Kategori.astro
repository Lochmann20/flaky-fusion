---
const { data } = Astro.props;
---

<!--<a href={`/${data.slug}`}>-->
 <a href={`/${data.kategori}`}>
  <div class="grid">
    <section class="col1">
      <img class="cardImg" src={`/images/${data.imagekat}`} alt={data.slug} />
      <!--<h2>{data.kategori}</h2>-->
    </section>

    <section class="col2">
      <h2>{data.kategori}</h2>
      <p>{data.info}</p>
    </section>
 
  </div>
</a>

<style>

  .grid{
    display: grid;
    grid-template-columns: 1fr;
  }

  .col1{
  text-align: center;
  }
  .cardImg {
    width: 350px;
  }

  h2, p{
    color: black;
    text-align: left;
    margin-left: 3rem;
    font-size: 22px;
  }

  h2{
    font-weight: 400;
  }

  a{
    text-decoration: none;
  }

  /* større skærme */
  @media screen and (min-width: 600px) {
    .grid{
      display: grid;
    grid-template-columns: 1fr 1fr;
  }

  .col1{
    margin-bottom: 5rem;

  }

  .col2{
    padding: 50px;
  }

  h2{
    margin-top: 5rem;
  }
  }
</style>
